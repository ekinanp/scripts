#!/usr/bin/env bash

USAGE="create-run-beaker-script <skeleton> [name]"
TEMPLATE_PATH="/Users/enisinan/GitHub/scripts/util/beaker-template.sh"

skeleton="$1"
name="$2"

[[ -z "${skeleton}" ]] && echo "${USAGE}" && exit 1
[[ -z "${name}" ]] && name="run-beaker.sh"

cat "${skeleton}" > "${name}"
echo "" >> "${name}"
cat "${TEMPLATE_PATH}" >> "${name}"
chmod a+x "${name}"
